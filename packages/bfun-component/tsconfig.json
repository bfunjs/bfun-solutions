{
  "include": [
    "../../../src/*"
  ],
  "exclude": [
    "../../../__tests__/*",
    "../../../test-dts/*"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "@ui/*": [
        "bfun_modules/ui/*"
      ],
      "@fn/*": [
        "bfun_modules/fn/*"
      ]
    }
  }
}
